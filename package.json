{
  "name": "@rbright/pi-notify-core",
  "version": "0.1.2",
  "description": "Shared notification primitives for Pi extensions.",
  "type": "module",
  "license": "MIT",
  "author": "Ryan Bright <ryan@moonriselabs.ai>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rbright/pi-notify-core.git"
  },
  "homepage": "https://github.com/rbright/pi-notify-core#readme",
  "bugs": {
    "url": "https://github.com/rbright/pi-notify-core/issues"
  },
  "keywords": [
    "pi",
    "pi-coding-agent",
    "notifications",
    "extension",
    "core"
  ],
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rm -rf dist coverage",
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "check": "bun run lint && bun run typecheck && bun run test",
    "prepublishOnly": "bun run check && bun run build",
    "precommit:install": "prek install",
    "precommit:run": "prek run --all-files"
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@eslint/json": "0.14.0",
    "@eslint/markdown": "7.5.1",
    "@types/node": "25.0.9",
    "@vitest/coverage-v8": "4.0.17",
    "eslint": "9.39.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-prettier": "5.5.5",
    "eslint-plugin-unused-imports": "4.3.0",
    "jiti": "2.6.1",
    "prettier": "3.8.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.53.0",
    "vitest": "4.0.17"
  }
}
